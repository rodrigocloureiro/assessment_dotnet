@page "/Cliente/Exibir"
@model at_test.Pages.Cliente.ExibirClientesModel
@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<hr />

<a asp-page="/Cliente/AdicionarCliente" class="btn btn-primary">Adicionar</a>

<table class="table table-striped table-borderless">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Data de Cadastro</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td class="align-middle">@cliente.Id</td>
                <td class="align-middle">@cliente.Nome</td>
                <td class="align-middle">@cliente.Cpf</td>
                <td class="align-middle">@cliente.DataNascimento</td>
                <td class="align-middle">@cliente.DataCadastro</td>
                <td class="align-middle col-md-3">
                    <a class="btn btn-primary" asp-page="EditarCliente" asp-route-id="@cliente.Id">Editar</a>
                    <a class="btn btn-success" asp-page="DetalhesCliente" asp-route-id="@cliente.Id">Detalhes</a>
                    <a class="btn btn-danger" asp-page="DeletarCliente" asp-route-id="@cliente.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
