@page "/Produto/Deletar/{id:int}"
@model at_test.Pages.Produto.DeletarProdutoModel
@{
    ViewData["Title"] = "Deletar";
}

<h1>Tem certeza que deseja excluir?</h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Ilustração
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/produtos/@Model.Produto.NomeImagem" title="@Model.Produto.Nome" />
        </dd>
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Quantidade)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Delete">
            <button class="btn btn-danger">Confirmar</button>
            <a class="btn btn-primary" asp-page="ExibirProdutos">Voltar</a>
        </form>
    </div>
</div>
