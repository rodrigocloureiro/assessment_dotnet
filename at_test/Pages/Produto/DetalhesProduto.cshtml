@page "/Produto/Detalhes/{id:int}"
@model at_test.Pages.Produto.DetalhesProdutoModel
@{
    ViewData["Title"] = "Detalhes";
}

<h1>Mais informações</h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Ilustração
        </dt>
        <dd class="col-sm-10">
            <img class="img-300" src="~/images/produtos/@Model.Produto.NomeImagem" title="@Model.Produto.Nome" />
        </dd>
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Quantidade)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-6">
        <a class="btn btn-warning" asp-page="EditarProduto" asp-route-id="@Model.Produto.Id">Editar</a>
        <a class="btn btn-primary" asp-page="ExibirProdutos">Voltar</a>
    </div>
</div>
